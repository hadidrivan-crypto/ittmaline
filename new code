<body>

<div class="comment-wrapper">
    <h3>Diskusi</h3>

    <div class="input-group">
        <input type="text" id="name" placeholder="Nama Anda..." required>
    </div>
    <div class="input-group">
        <textarea id="comment" placeholder="Tulis komentar..." required></textarea>
    </div>
    <button onclick="submitComment()">Kirim Komentar</button>

    <div id="comment-display"></div>
</div>

<script>
    // JS: Logika Penyimpanan dan Penampilan
    const displayArea = document.getElementById('comment-display');

    // 1. Muat komentar dari memori saat halaman dibuka
    window.onload = function() {
        const savedComments = JSON.parse(localStorage.getItem('webComments')) || [];
        savedComments.forEach(c => renderHTML(c));
    };

    function submitComment() {
        const nameInput = document.getElementById('name');
        const textInput = document.getElementById('comment');
        const dateNow = new Date().toLocaleString('id-ID');

        if (nameInput.value.trim() === "" || textInput.value.trim() === "") {
            alert("Harap isi nama dan komentar!");
            return;
        }

        const commentData = {
            name: nameInput.value,
            text: textInput.value,
            date: dateNow
        };

        // 2. Simpan ke LocalStorage
        const allComments = JSON.parse(localStorage.getItem('webComments')) || [];
        allComments.push(commentData);
        localStorage.setItem('webComments', JSON.stringify(allComments));

        // 3. Tampilkan di layar
        renderHTML(commentData);

        // Reset input
        nameInput.value = "";
        textInput.value = "";
    }

    function renderHTML(data) {
        const div = document.createElement('div');
        div.className = 'comment-card';
        div.innerHTML = `
            <strong>${escapeText(data.name)}</strong>
            <p>${escapeText(data.text)}</p>
            <small>${data.date}</small>
        `;
        // Masukkan komentar baru di posisi paling atas
        displayArea.insertBefore(div, displayArea.firstChild);
    }

    // Fungsi keamanan untuk mencegah serangan XSS (Script jahat)
    function escapeText(str) {
        const div = document.createElement('div');
        div.textContent = str;
        return div.innerHTML;
    }
</script>

</body>
</html>
